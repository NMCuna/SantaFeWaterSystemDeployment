@model SantaFeWaterSystem.Models.RateBracket
@{
    ViewData["Title"] = "Delete Rate Bracket";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Rate Bracket</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-3">Account Type</dt>
        <dd class="col-sm-9">@Model.AccountType</dd>
        <dt class="col-sm-3">Range</dt>
        <dd class="col-sm-9">@Model.MinCubic - @(Model.MaxCubic?.ToString() ?? "∞")</dd>
        <dt class="col-sm-3">Rate / cbm</dt>
        <dd class="col-sm-9">@Model.RatePerCubicMeter</dd>
        <dt class="col-sm-3">Base Amount</dt>
        <dd class="col-sm-9">@Model.BaseAmount</dd>
        <dt class="col-sm-3">Effective Date</dt>
        <dd class="col-sm-9">@Model.EffectiveDate?.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
